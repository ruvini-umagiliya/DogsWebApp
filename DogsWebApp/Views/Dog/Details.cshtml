@model DogsWebApp.Models.Dog

@{
    ViewBag.Title = "Details";
}
<div class="container">
    <h2>Details</h2>

    <div class="form-group row col-md-10">
        @{int rowSpanCount = Model.Types.Count + 1; }

        <table class="table table-borderless">
            <tr>
                <td class="col-md-1"> 
                    @Html.LabelFor(model => model.Breed, htmlAttributes: new { @class = "control-label col-md-1" })
                </td>
                <td class="col-md-10">
                    @Html.EditorFor(model => model.Breed, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                </td>
            </tr>
            @if (Model.Types.Count > 0)
            {
                <tr>
                    <td class="col-md-1" rowspan="@rowSpanCount">
                        @Html.LabelFor(model => model.Types, htmlAttributes: new { @class = "control-label col-md-1" })
                    </td>
                </tr>
                for (var count = 0; count < Model.Types.Count; count++)
                {
                    <tr>
                        <td class="col-md-10">
                            @Html.EditorFor(model => model.Types[count].Type, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                        </td>
                    </tr>
                }
            }
        </table>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-1 col-md-10">
            <button class="btn btn-primary" title="Edit" onclick="location.href='@Url.Action("Edit", "Dog", new { id = Model.ID })'">
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                Edit
            </button>
            <button class="btn btn-default" title="Back to List" onclick="location.href='@Url.Action("Index", "Dog")'">
                <span class="glyphicon glyphicon-list" aria-hidden="true"></span>
                Back to List
            </button>
        </div>
    </div>
</div>
